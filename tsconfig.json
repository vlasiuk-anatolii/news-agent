{
    "compilerOptions": {
      "target": "ES2021",
      "module": "NodeNext",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "moduleDetection": "force"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }